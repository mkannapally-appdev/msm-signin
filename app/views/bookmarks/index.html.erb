<div>
  <div>
    <h1>
      <%= @signed_user.first_name %> <%= @signed_user.last_name %> bookmarks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>


    <form action="/insert_bookmark" method="post">


      <div>
        <label for="movie_id_box"> </label>
        <input type="hidden" id="movie_id_box" name="query_movie_id" value="<%= %>">
      </div>

      <button>
        Create bookmark
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>

      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>

        <td>
         <a href = "/movie/<%= a_bookmark.movie_id %>"> <%= Movie.where(:id => a_bookmark.movie_id).at(0).title %> </a>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>"> Un-bookmark </a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
